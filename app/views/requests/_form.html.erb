<div class="container">
  <div class="row">
    <div class="form_edit">
      <%= form_with(model: @request, local: true) do |f| %>
        <div class="col-sm-10">
          <label class="control-label">リクエストのタイトル</label>
          <%= f.text_field :title, class: "form-control", placeholder: "リクエストのタイトルを入力"%>
        </div>
        <div class="col-sm-12">
          <label class="control-label">リクエストの内容</label>
          <%= f.rich_text_area :content, placeholder: "リクエストの内容を入力"%>
        </div>
        <br>
        <div class="col-sm-8">
          <label class="control-label">提案期限</label>
          <%= f.text_field :proposal_deadline, class: "form-control", placeholder: "提案期限を入力"  %>
        </div>
        <div class="col-sm-6">
          <label class="control-label">予算目安</label>
          <%= f.text_field :budget_estimate, class: "form-control", placeholder: "内容を入力" %>
        </div>
        <br>
        <p class="text-center"><%= f.submit "サービスを作成", class: "btn btn-warning" %></p>
      <% end %>
    </div>
  </div>
</div>