<div class="container">
  <div class="row">
    <div class="form_edit">
      <%= form_with(model: @request, local: true) do |f| %>
        <div class="col-sm-10">
          <label class="control-label">リクエストのタイトル</label>
          <%= f.text_field :title, class: "form-control", placeholder: "リクエストのタイトルを入力"%>
        </div>
        <div class="col-sm-12">
          <label class="control-label">リクエストの内容</label>
          <%= f.rich_text_area :content, placeholder: "リクエストの内容を入力"%>
        </div>
        <br>
        <div class="col-sm-8">
          <label class="control-label">提案期限</label>
          <%= f.text_field :proposal_deadline, class: "form-control datetimepicker-input", placeholder: "提案期限を入力", data: {toggle: "datetimepicker", target: "#start_time"} %>
        </div>
        <div class="col-sm-6">
          <label class="control-label">予算目安</label>
          <%= f.text_field :budget_estimate, class: "form-control", placeholder: "内容を入力" %>
        </div>
        <div class="col-sm-3">
          <label class="control-label">画像①</label>
          <%= f.file_field :image01, class: "js-file-upload"%>
        </div>
        <div class="col-sm-3">
          <label class="control-label">画像②</label>
          <%= f.file_field :image02, class: "js-file-upload"%>
        </div>
        <div class="col-sm-3">
          <label class="control-label">動画①</label>
          <%= f.file_field :video01, class: "js-file-upload"%>
        </div>
        <div class="col-sm-6">
          <label class="control-label">SkypeID</label>
          <%= f.text_field :skype_id, class: "form-control", placeholder: "SkypeIDを入力" %>
        </div>
        <br>
        <%= f.hidden_field :host_id, value: @host_id %>
        <p class="text-center"><%= f.submit "リクエストを作成", class: "btn btn-warning" %></p>
      <% end %>
    </div>
  </div>
</div>