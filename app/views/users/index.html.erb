<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <%= render "search_form"%>
    </div>
    <div class="col-md-9" >
      <% @users.reverse_each do |user| %>
        <% if user.avatar_image_url.nil?%>
          <%= link_to user_path(user.id) do %>
            <%= image_tag "/assets/onerror.png", size: 150, class: "img-responsive" %>
          <% end %>
        <% elsif %>
          <%= link_to user_path(user.id) do %>
            <div class="card" style="max-width: 18rem;">
              <%= image_tag user.avatar_image_url, size: 150, class: "card-img-top h-100" %>
              <div class="card-body card-body-white">
                <%= user.name  %>
          <% end %>
                <%= user.profile%>
              </div>
            </div>
        <% end %>
        <%= raw(youtube_embed_small("https://www.youtube.com/watch?v=3dEqlceh_ms&list=RD3dEqlceh_ms&start_radio=1&loop=0")) %>
      <% end %>
    </div>
  </div>
</div>