<h1>練習した曲一覧</h1>

<p><%= notice %></p>

<table>
    <tr>
        <th>タイトル</th>
        <th>内容</th>
    </tr>

    <% @products.each do |product| %>
    <tr>
        <td><%= product.title %></td>
        <td><%= product.content %></td>
        <td><%= link_to '詳細を確認する', product_path(product.id) %></td>
        <td><%= link_to "練習した曲を編集する", edit_product_path(product.id), data: { confirm: '本当に編集していいですか？' } %></td>
        <td><%= link_to 'を削除する', product_path(product.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
    <% end %>
</table>