<h3 class="text-center mb-5", id="page_title">取り組んだ曲のメモ一覧</h3>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th>タイトル</th>
                    <th>
                </tr>
                </thead>
                    <% @products.each do |product| %>
                    <tr>
                        <td><%= product.title %></td>
                        <td><%= link_to '詳細', product_path(product.id) %> / <%= link_to "編集", edit_product_path(product.id) %> / <%= link_to '削除', product_path(product.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
                    </tr>
                    <% end %>
            </table>
        </div>
    </div>
</div>