<div class="users_search">
    <h4 class="text-center mb-5 text-warning">条件で絞り込む</h4>
    <%= search_form_for(@q, url: users_search_path) do |f| %>
        <%= f.search_field :name_cont, class: "form-control", placeholder: "ユーザー名で検索"%><br>
        <%= f.search_field :additional_explanation_cont, class: "form-control", placeholder: "プロフィールで検索" %><br>
        <%= f.search_field :gears_name_cont, class: "form-control", placeholder: "持っている機材の名前で検索" %><br>
        <p class="text-center"><%= f.submit class: "btn btn-warning"%></p>
    <% end %>
</div>