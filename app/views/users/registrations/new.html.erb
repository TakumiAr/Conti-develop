<div class="video-wrap">
  <%= video_tag 'aa.mp4', autoplay: true, loop: true, muted: true, id: "bgvid" %>
</div>
<div class="overlay">
  <div class="container py-5 text-center">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <h1 class="mb-4 display-3 text-white">Contiを始めよう</h1>
        <p class="lead mb-5 text-white">A wonderful serenity has taken possession of my entire soul, like these sweet mornings of spring which I enjoy with my whole heart. I am alone, and feel the charm of existence in this spot, which was created for the bliss of souls like mine.</p>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal1">
          Contiに参加する
        </button>
        <div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="label1" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="label1">会員登録</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="field">
                    <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name", placeholder: "ユーザー名を入力" %>
                  </div>

                  <div class="field">
                    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力" %>
                  </div>

                  <div class="field">
                    <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "パスワード" %>
                  </div>

                  <div class="field">
                    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "パスワード確認" %>
                  </div>

                  <div class="actions">
                    <%= f.submit "会員登録", class: "btn btn-primary" %>
                  </div>
                <% end %>

                <%= render "users/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
