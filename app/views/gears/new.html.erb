<h3 class="text-center mb-5", id="page_title">機材を登録</h3>

<div class="container">
  <div class="form_edit">
    <%= form_with(model: @gear, local: true) do |f| %>
      <%= f.text_field :name, class: "form-control", placeholder: "機材の名前を入力"%>
      <%= f.file_field :image %>
      <p class="text-center"><%= f.submit "機材を登録", class: "btn btn-primary" %></p>
    <% end %>
  </div>
    <%= link_to "プロフィールに戻る", user_path(current_user.id) %>
</div>