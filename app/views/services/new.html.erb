<!doctype html>
<html lang="ja">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="css/bootstrap.min.css">
<title>マイページ編集</title>
<style>
/* 本文に関連のないスタイル */
body {
  padding-top: 2rem;
}
.container {
  margin-bottom: 2rem;
}
</style>
</head>
<body>
<h1 class="text-center mb-5">サービス作成フォーム</h1>
<div class="container">
  <form>
    <!-- サービスタイトル入力 -->
    <div class="form-group">
      <label for="email1">サービスタイトル</label>
      <input type="email" class="form-control" id="email1" aria-describedby="emailHelp" placeholder="サービスタイトルを入力">
      <small id="emailHelp" class="form-text text-muted">まだ送れません</small>
    </div>
    <!-- サービスの補足説明入力 -->
    <div class="form-group">
      <label for="password1">サービスの補足説明</label>
      <input type="password" class="form-control" id="password1" placeholder="サービスの補足説明を入力"> </div>

    <!-- 複数行のテキスト入力欄 -->
    <div class="form-group">
      <label for="textarea1">サービス内容</label>
      <textarea class="form-control" id="textarea1" rows="3"></textarea>
    </div>
        <!-- プルダウンメニュー -->
    <div class="form-group">
      <label for="select1">カテゴリ</label>
      <select class="form-control" id="select1">
        <option>ギター</option>
        <option>ピアノ</option>
        <option>ボーカル</option>
        <option>DTM</option>
        <option>ドラム</option>
      </select>
    </div>
    <!-- ファイル選択 -->
    <div class="form-group">
      <label for="file1">画像を選択</label>
      <input type="file" class="form-control-file" id="file1">
    </div>
    <!-- ファイル選択 -->
    <div class="form-group">
      <label for="file1">動画を選択</label>
      <input type="file" class="form-control-file" id="file1">
    </div>
    <!-- 送信ボタン -->
    <button type="submit" class="btn btn-primary">出品する</button>
  </form>
</div>
<script src="js/jquery-3.3.1.slim.min.js"></script>
<script src="js/bootstrap.bundle.min.js"></script>
</body>
</html>

<%= link_to "プロフィールに戻る", user_path(current_user.id) %>