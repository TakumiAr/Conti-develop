<!DOCTYPE html>
<html>
  <head>
    <title>Conti（コンティ）</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-1">
    <div class="container">
      <%= link_to 'Conti', root_path, class: "navbar-brand" %>
      <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="ナビゲーションの切替">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse ml-5" id="Navber">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'About', about_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Artists', users_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Products', products_path, class: "nav-link" %>
          </li>
          <% if user_signed_in?	%>
            <li class="nav-item">
              <%= link_to 'Mypage', users_mypage_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
            <%else %>
            <li class="nav-item">
              <%= link_to 'Registration', new_user_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Log in', new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
